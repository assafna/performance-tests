#!/bin/bash
#SBATCH -J nvidia_resnet50_pt_single_gpu
#SBATCH --nodes 1
#SBATCH -gres gpu:1

srun --container-image $1 \
 --container-mounts $2:/imagenet \
 --container-mount-home \
 --no-container-entrypoint \
 sh -c \
 "python ./launch.py \
 --model resnet50 \
 --precision $3 \
 --mode benchmark_training \
 --platform $4 \
 /imagenet \
 --raport-file benchmark.json \
 --epochs 1 \
 --prof 100"
